{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!node_modules",
			"!.next",
			"!dist",
			"!build",
			"!pnpm-lock.yaml"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 80,
		"indentWidth": 2,
		"useEditorconfig": true,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"quoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"trailingCommas": "none"
		},
		"parser": {
			"allowComments": false,
			"allowTrailingCommas": false
		}
	},
	"css": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noNodejsModules": "off",
				"noUnknownProperty": "off"
			},
			"complexity": {
				"noForEach": "error",
				"useSimplifiedLogicExpression": "error",
				"useWhile": "error"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "error",
					"options": {
						"attributes": ["className"]
					}
				}
			},
			"performance": {
				"noAccumulatingSpread": "error",
				"noImgElement": "error",
				"useTopLevelRegex": "error"
			},
			"style": {
				"noDefaultExport": "off"
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
