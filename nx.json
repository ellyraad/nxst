{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"targetDefaults": {
		"build": {
			"dependsOn": ["^build"],
			"cache": true
		},
		"format": {
			"cache": true
		},
		"lint": {
			"cache": true
		},
		"test": {
			"cache": true
		},
		"test:e2e": {
			"cache": true
		},
		"@nx/js:tsc": {
			"cache": true,
			"dependsOn": ["^build"],
			"inputs": ["default", "^default"]
		}
	},
	"plugins": [
		"biome",
		{
			"plugin": "@nx/js/typescript",
			"options": {
				"typecheck": {
					"targetName": "typecheck"
				},
				"build": {
					"targetName": "build",
					"configName": "tsconfig.lib.json",
					"buildDepsName": "build-deps",
					"watchDepsName": "watch-deps"
				}
			}
		}
	]
}
